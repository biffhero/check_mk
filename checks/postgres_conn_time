# <<<postgres_conn_time>>>
# 0.063

def inventory_postgres_conn_time(info):
    yield None, None

def check_postgres_conn_time(_no_item, _no_params, info):
    yield 0, "%s seconds" % info[0][0], [("connection_time", float(info[0][0]))]

check_info['postgres_conn_time'] = {
    "check_function"          : check_postgres_conn_time,
    "inventory_function"      : inventory_postgres_conn_time,
    "service_description"     : "PostgreSQL Connection Time",
    "has_perfdata"            : True
}
