def inventory_arbor_host_fault(parsed):
    if 'host_fault' in parsed:
        return [(None, None)]


def check_arbor_host_fault(no_item, no_params, parsed):
    status = 0
    if parsed['host_fault'] != "No Fault":
        status = 2
    return status, parsed['host_fault']


