# <<<postgres_version>>>
# PostgreSQL 9.3.6 on x86_64-unknown-linux-gnu, compiled by gcc (Ubuntu 4.8.2-19ubuntu1) 4.8.2, 64-bit

def inventory_postgres_version(info):
    yield (None, None)

def check_postgres_version(_no_item, _no_params, info):
    yield 0, info[0][0]

check_info['postgres_version'] = {
    "check_function"          : check_postgres_version,
    "inventory_function"      : inventory_postgres_version,
    "service_description"     : "PostgreSQL Version",
}
